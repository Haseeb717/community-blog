  <div class="product-page-detail">
    <div class="container">

      
      <section class="product-carousel">
        <div class="product-des">
          <div class="product-heading">
            <%= @product.title %>
          </div>
          <div class="product-author">
            <%= @product.user.first_name + " " + @product.user.last_name %>
          </div>
        </div>
        
        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
          <!-- Indicators -->
          
          <ol class="carousel-indicators">
            <% count=0 %>
            <% if @product.images.count > 1 %> 
              <% @product.images.each do |image| %>
                <% if count == 0 %>
                  <li data-target="#carousel-example-generic" data-slide-to=<%= count %> class="active">
                <% else %>
                  <li data-target="#carousel-example-generic" data-slide-to=<%= count %> >
                <% end %>
                </li>
                <% count=count+1 %>
              <% end %>

            <% end %>
            
          </ol>
          <!-- Wrapper for slides -->
          <div class="carousel-inner" role="listbox">
              <% active=0 %>
              <% @product.images.each do |image| %>
                <% if active == 0 %>
                  <div class="item active">
                <% else %>
                  <div class="item">
                <% end %>
                <%= image_tag(image.avatar.url, class: "style_image") %>
                </div>
                <% active=active+1 %>
              <% end %>
              <% if @product.images.nil? || @product.images.empty? %>
                <div class="item active">
                  <%= image_tag("product-img-1.png", class: "style_image") %>
                </div>
              <% end %>
          </div>
        </div>
      </section>
      <section class="product-details">
        <div class="container-product-details">
          <div class="row">
            <div class="col-md-6">
              <!-- <div class="product-details-rating">
                <p>Rating:</p>
                <ul>
                  <li><a href="#"><span></span></a></li>
                  <li><a href="#"><span></span></a></li>
                  <li><a href="#"><span></span></a></li>
                  <li><a href="#"><span></span></a></li>
                  <li><a href="#"><span></span></a></li>
                </ul>
              </div> -->
              <div class="product-details-like">
                <ul>
                  <% if current_user.likes?(@product) %>
                    <li><a class="dislike" id=<%= "#{@product.id}" %> ></a><span class="like_count"><%= @product.likers(User).count %></span></li>
                  <% else %> 
                    <li><a class="like" id=<%= "#{@product.id}" %> ></a><span class="like_count"><%= @product.likers(User).count %></span></li>
                  <% end -%>
                </ul>
              </div>
            </div>
            <div class="col-md-6">
              <div class="product-details-date">
                
                <span><%= @product.created_at.strftime("%d/%m/%Y") %></span>
                
                <%= image_tag("img-8.png", options={alt: "Logo"}) %>
              </div>
            </div>
          </div>
        </div>
      </section>
      <section class="product-descrip">
        <div class="container-product-descrip">
          <div class="row">
            <div class="col-md-12">
              <div class="product-descrip-detail">
                
                <div class="product-detail">
                  <div class="product-detail-bg">
                    <p><%= simple_format h @product.description %></p>
                  </div>
                </div>
                <div class="product-detail">
                  <% unless @product.pros.empty? %>
                    <h3>Pros</h3>
                    <div class="product-detail-bg">
                      <p><%= simple_format h @product.pros %></p>
                    </div>
                  <% end %>
                </div>
                <div class="product-detail">
                  <% unless @product.cons.empty? %>
                  <h3>Cons</h3>
                    <div class="product-detail-bg">
                      <p><%= simple_format h @product.cons %></p>
                    </div>
                  <% end %>
                </div>
                <div class="product-detail">
                  <% if !@product.categories.empty? %>
                    <div class="product-detail-bg">
                        <% @product.categories.each do |category| %>
                          <span class="label label-primary"><%= category.name %></span>
                        <% end %>
                    </div>
                  <% end %>
                </div>
                <!-- <div class="product-detail">
                  <% unless @product.price.nil? %>
                  <h3>Price</h3>
                    <div class="product-detail-bg">
                      <p><%= @product.price %></p>
                    </div>
                  <% end %>
                </div>
                <div class="product-detail">
                  <% unless @product.link.empty? %>
                    <h3>Link To Product</h3>
                    <div class="product-detail-bg">
                      <%= link_to @product.link, "http://"+@product.link , target: "_blank" %>
                    </div>
                  <% end %>
                </div> -->
              </div>
            </div>
            <!-- <div class="col-md-4">
              <div class="product-descrip-imgs">
                <h3>Similar Products From User</h3>
                <div class="product-imgs-scroll">
                  <ul>
                    <% @products.each do |p| %>
                      <% if p.images.nil? || p.images.empty? %>
