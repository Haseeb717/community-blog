<div class="login-page">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="login-section-bg">
            <div class="login-section">

            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <%= devise_error_messages! %>
              <div class="form-group form-login">
                <%= f.email_field :email, placeholder: "Email Address", id: "exampleInputName2",class: "form-control field-user", autocomplete: "off", autofocus: true %>
              </div>
              <div class="form-group form-login">
                <%= f.password_field :password, autocomplete: "off", placeholder: "Password", id: "exampleInputEmail2", class: "form-control field-password" %>
              </div>
              <div class="login-link">
                <%= f.submit "Login" , id: "login-btn", class: "btn" %>
              </div>
            <% end -%>
