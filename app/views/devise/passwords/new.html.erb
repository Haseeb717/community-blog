
<div class="login-page">
  <div class="container">
      <div class="row">
        <div class="col-md-12">
          <% flash.each do |key, value| %>
            <div class="alert alert-info">
              <a href="#" data-dismiss="alert" class="close">Ã—</a>
                <ul>
                  <li style="list-style-type:none;">
                    <%= value %>
                  </li>
                </ul>
            </div>
          <% end %>
          <%= devise_error_messages! %>
          <div class="login-section-bg">
            <div class="login-section">
              
              <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                

                <div class="form-group form-login">
                  <%= f.email_field :email, placeholder: "Email Address", id: "exampleInputName2",class: "form-control field-user", autocomplete: "off" , autofocus: true %>
                </div>

                <div class="login-link">
                  <%= f.submit "Send instructions", id: "pwd_btn" %>
                </div>
              <% end %>
              <!-- <div class="Or-option">
                <p>
                  <span>or</span>
                </p>
              </div>
              <div class="facebook-link">
                <a href="#">
                  <i class="fa fa-facebook-official"></i>
                  <span>Login With Facebook</span>
                </a>
              </div> -->
              <div class="others-link">
                <%= render "devise/shared/links" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>
